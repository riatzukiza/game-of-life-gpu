(import-namespace interface)

(macro fluently (...body)
       `(scoped ...@body this))

(macro accumulate (name ...body)
       `(assign @name (pipe @name ...@body)))

(macro collect (name value ...body)
       `(scoped
         (var @name @value)
         ...@body
         @name))

