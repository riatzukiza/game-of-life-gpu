
(var sprites ((create Sprite-system)))
(var sprite (.spawn sprites {x 100 y 100} [32 32]))

(pipe (.load Image "/home/aaron/Pictures/sprites/WalkLavo.png")
      (.then (=> ([image])

                 (print "image" image)
                 (set sprite
                      'image image
                      'frame-count 4)

                 (pipe Ticker
                       (.init 10)
                       (.start)
                       (.remove-all-listeners 'tick)
                       (.on 'tick (->
                                   (.update sprites)
                                   (.update rendering)))))))
